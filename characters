/*q.34 Write a program to read a character from the user and check if it is a vowel or a consonant.*/

#include <iostream>
using namespace std;

int main(){
char al;

cout<<"enter a character: "<<endl;
cin>>al;

if(al=='a'|| al=='e'|| al=='i'|| al=='o'|| al=='u'){
cout<<"The character you chose is a vowel."<<endl;
}else{
cout<<"The character you chose is a consonant."<<endl;

}
}
